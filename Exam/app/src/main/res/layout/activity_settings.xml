<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.lingxiao.exam.ui.activity.SettingsActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_color_select"
                android:textSize="18sp"
                android:textColor="@color/blue_primary_color"
                android:text="@string/color_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_color_select"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:id="@+id/btn_color_blue"
                            android:layout_width="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:layout_height="60dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="0dp"
                            card_view:cardBackgroundColor="@color/blue_primary_color">

                            <ImageView
                                android:id="@+id/iv_blue"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_check"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/btn_blue_grey_blue"
                            android:layout_width="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:layout_height="60dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="0dp"
                            card_view:cardBackgroundColor="@color/blue_grey_primary_color">

                            <ImageView
                                android:id="@+id/iv_grey_blue"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@null"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/btn_color_red"
                            android:layout_width="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:layout_height="60dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="0dp"
                            card_view:cardBackgroundColor="@color/red_primary_color">

                            <ImageView
                                android:id="@+id/iv_red"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@null"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/secondary_text"
                        android:text="@string/havent_color"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

         </LinearLayout>
        <!--toolbar下方阴影-->
        <View
            android:layout_width="match_parent"
            android:background="@drawable/shadow"
            android:layout_height="2dp"/>
        </RelativeLayout>
</LinearLayout>
